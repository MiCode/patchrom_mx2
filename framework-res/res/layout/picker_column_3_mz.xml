<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@drawable/timepicker_frame_middle" android:layout_width="@dimen/picker_width" android:layout_height="@dimen/picker_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_gravity="center" android:id="@id/select_box" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/timepicker_box_selected" android:scaleType="fitXY" />
