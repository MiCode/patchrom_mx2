        <FrameLayout android:id="@id/column1Layout" android:layout_width="@dimen/picker_column_width" android:layout_height="@dimen/picker_height" android:layout_weight="0.0">
            <com.meizu.widget.ScrollTextView android:id="@id/scroll1" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            <TextView android:textSize="@dimen/picker_text_size" android:textColor="@color/picker_text_color" android:gravity="center" android:layout_gravity="right" android:id="@id/scroll1_text" android:layout_width="@dimen/picker_text_width" android:layout_height="fill_parent" />
        </FrameLayout>
        <ImageView android:id="@id/divider_bar1" android:visibility="gone" android:layout_width="0.0px" android:layout_height="fill_parent" />
        <FrameLayout android:id="@id/column2Layout" android:layout_width="0.0dip" android:layout_height="@dimen/picker_height" android:layout_weight="1.0">
            <com.meizu.widget.ScrollTextView android:id="@id/scroll2" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            <TextView android:textSize="@dimen/picker_text_size" android:textColor="@color/picker_text_color" android:gravity="center" android:layout_gravity="right" android:id="@id/scroll2_text" android:layout_width="@dimen/picker_text_width" android:layout_height="fill_parent" />
        </FrameLayout>
        <ImageView android:id="@id/divider_bar2" android:visibility="gone" android:layout_width="0.0px" android:layout_height="fill_parent" />
        <FrameLayout android:id="@id/column3Layout" android:layout_width="@dimen/picker_column_width" android:layout_height="@dimen/picker_height" android:layout_weight="0.0">
            <com.meizu.widget.ScrollTextView android:id="@id/scroll3" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            <TextView android:textSize="@dimen/picker_text_size" android:textColor="@color/picker_text_color" android:gravity="center" android:layout_gravity="right" android:id="@id/scroll3_text" android:layout_width="@dimen/picker_text_width" android:layout_height="fill_parent" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
