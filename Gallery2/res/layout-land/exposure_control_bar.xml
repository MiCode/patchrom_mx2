<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/exposure_control_bar_margin_top" android:layout_alignParentLeft="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_gravity="center" android:id="@id/exposure_control_bar_bg" android:background="@drawable/exposure_background" android:visibility="gone" android:layout_width="@dimen/exposure_control_bar_height" android:layout_height="@dimen/exposure_control_bar_width" />
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@id/exposure_control_bar" android:visibility="gone" android:layout_width="@dimen/exposure_control_bar_height" android:layout_height="@dimen/exposure_control_bar_width">
        <com.android.camera.ui.RotateImageView android:id="@id/exposure_add" android:paddingBottom="@dimen/exposure_add_padding_bottom" android:visibility="gone" android:layout_width="@dimen/exposure_add_width" android:layout_height="@dimen/exposure_add_height" android:src="@drawable/ic_zoom_in_holo_light" android:onClick="onExposureAddClicked" />
        <com.android.camera.ui.RotateLayout android:layout_gravity="center" android:id="@id/rotate_exposure_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/exposure_text_size" android:textColor="@drawable/txt_enable_color" android:gravity="center" android:id="@id/exposure_text" android:visibility="gone" android:layout_width="@dimen/exposure_text_width" android:layout_height="@dimen/exposure_text_height" android:text="@string/camera_exposure_default_value" android:singleLine="true" />
        </com.android.camera.ui.RotateLayout>
        <com.android.camera.ui.RotateImageView android:id="@id/exposure_less" android:paddingBottom="@dimen/exposure_add_padding_bottom" android:visibility="gone" android:layout_width="@dimen/exposure_less_width" android:layout_height="@dimen/exposure_less_height" android:src="@drawable/ic_zoom_out_holo_light" android:onClick="onExposureLessClicked" />
    </LinearLayout>
</FrameLayout>
