<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@color/top_actionbar_background" style="@style/ActionBarInner"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/doodlemode_select_layout" style="@style/ActionBarInner">
        <View android:id="@id/anchor_view" android:visibility="invisible" android:layout_width="1.0dip" android:layout_height="wrap_content" />
        <RelativeLayout android:id="@id/actionbar_marked" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/actionbar_marginleft">
            <RelativeLayout android:id="@id/doodle_text_layout" android:layout_width="@dimen/actionbar_button_w" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/actionbar_textlayout_marginleft_land">
                <ImageButton android:id="@id/doodle_text" android:src="@drawable/photoeditor_doodle_text" style="@style/DoodleSettingLandBtn" />
                <ImageButton android:id="@id/doodle_text_background" style="@style/DoodleSettingBackground" />
            </RelativeLayout>
            <RelativeLayout android:id="@id/doodle_shape_layout" android:layout_width="@dimen/actionbar_button_w" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/actionbar_settingbtn_marginleft_land" android:layout_toRightOf="@id/doodle_text_layout">
                <ImageButton android:id="@id/doodle_shape" android:src="@drawable/photoeditor_btn_arrow" style="@style/DoodleSettingLandBtn" />
                <ImageButton android:id="@id/doodle_shape_background" style="@style/DoodleSettingBackground" />
            </RelativeLayout>
            <RelativeLayout android:id="@id/doodle_edit_layout" android:layout_width="@dimen/actionbar_button_w" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/actionbar_settingbtn_marginleft_land" android:layout_toRightOf="@id/doodle_shape_layout">
                <ImageButton android:id="@id/doodle_edit" android:src="@drawable/photoeditor_doodle_edit" style="@style/DoodleSettingLandBtn" />
                <ImageButton android:id="@id/doodle_edit_background" android:visibility="visible" style="@style/DoodleSettingBackground" />
            </RelativeLayout>
            <RelativeLayout android:id="@id/doodle_eraserlayout" android:layout_width="@dimen/actionbar_button_w" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/actionbar_settingbtn_marginleft_land" android:layout_toRightOf="@id/doodle_edit_layout">
                <ImageButton android:id="@id/doodle_eraser" android:src="@drawable/photoeditor_doodle_eraser" style="@style/DoodleSettingLandBtn" />
                <ImageButton android:id="@id/doodle_eraser_background" style="@style/DoodleSettingBackground" />
            </RelativeLayout>
            <ImageButton android:enabled="false" android:id="@id/doodle_undo_button" android:layout_marginLeft="@dimen/actionbar_undobtn_marginleft_land" android:src="@drawable/photoeditor_doodle_undo" android:layout_toRightOf="@id/doodle_eraserlayout" style="@style/DoodleSettingLandBtn" />
            <ImageButton android:enabled="false" android:id="@id/doodle_redo_button" android:layout_marginLeft="@dimen/actionbar_redobtn_marginleft_land" android:src="@drawable/photoeditor_doodle_redo" android:layout_toRightOf="@id/doodle_undo_button" style="@style/DoodleSettingLandBtn" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/color_picker_layout" android:visibility="gone" style="@style/ActionBarInner">
        <ImageView android:layout_gravity="center_vertical" android:id="@id/color_picker_preview" android:background="@drawable/color_picker_preview_edge" android:padding="1.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:textColor="@color/details_gray" android:layout_gravity="center_vertical" android:id="@id/color_picker_result" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" />
    </LinearLayout>
</FrameLayout>
